<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-driver-payout-table" author="Mozol Denis">
        <createTable tableName="driver_payouts">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="driver_account_id" type="bigint">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="amount" type="decimal(10,2)" defaultValue="0.00"/>
            <column name="created_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="credit_card_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="driver-payouts"/>
        </rollback>
    </changeSet>

</databaseChangeLog>