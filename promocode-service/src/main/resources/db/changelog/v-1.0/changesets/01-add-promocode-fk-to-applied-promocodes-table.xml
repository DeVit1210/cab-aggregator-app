<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-promocode-fk-to-applied-promocodes-table" author="Mozol Denis">
        <addForeignKeyConstraint baseTableName="applied_promocodes"
                                 baseColumnNames="promocode_id"
                                 constraintName="promocodes_applied_promocodes_fk"
                                 referencedTableName="promocodes"
                                 referencedColumnNames="id"/>
        <rollback>
            <dropForeignKeyConstraint baseTableName="applied_promocodes"
                                      constraintName="promocodes_applied_promocodes_fk"/>
        </rollback>
    </changeSet>

</databaseChangeLog>