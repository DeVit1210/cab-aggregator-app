<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-ratings-table" author="MozolDenis">
        <createTable tableName="ratings">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="rated_person_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="ENUM('PASSENGER', 'DRIVER')">
                <constraints nullable="false"/>
            </column>
            <column name="rating_value" type="ENUM('ZERO', 'ONE', 'TWO', 'THREE', 'FOUR', 'FIVE')">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="datetime" value="CURRENT"/>
            <column name="comment" type="text"/>
        </createTable>
        <rollback>
            <dropTable tableName="ratings"/>
        </rollback>
    </changeSet>

</databaseChangeLog>