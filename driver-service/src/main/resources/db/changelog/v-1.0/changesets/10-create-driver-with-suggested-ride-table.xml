<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="create-driver-with-suggested-ride-table" author="Mozol Denis">
        <createTable tableName="driver_with_suggested_ride">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="driver_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="suggested_ride_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="driver_with_suggested_ride"/>
        </rollback>
    </changeSet>

</databaseChangeLog>